@page
@model LojaDeFunkos.Pages.EditarModel

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Alteração de Hamburguer</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           <input type="hidden" asp-for="Funko.FunkoId" />

            <div class="form-group">
                <label asp-for="Funko.Nome" class="control-label"></label>
                <input asp-for="Funko.Nome" class="form-control" />
                <span asp-validation-for="Funko.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Funko.Descricao" class="control-label"></label>
                <input asp-for="Funko.Descricao" class="form-control" />
                <span asp-validation-for="Funko.Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Funko.ImagemUri" class="control-label"></label>
                <input asp-for="Funko.ImagemUri" class="form-control" />
                <span asp-validation-for="Funko.ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Funko.Preco" class="control-label"></label>
                <input asp-for="Funko.Preco" class="form-control" />
                <span asp-validation-for="Funko.Preco" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Funko.EntregaExpressa" />
                <label asp-for="Funko.EntregaExpressa"></label>
            </div>

            <div class="form-group">
                <label asp-for="Funko.DataCadastro" class="control-label"></label>
                <input asp-for="Funko.DataCadastro" class="form-control" />
                <span asp-validation-for="Funko.DataCadastro" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="submit" value="Excluir" class="btn btn-danger" asp-page-handler="Exclusao"/>
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

